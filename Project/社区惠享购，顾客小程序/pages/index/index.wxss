page{
  background-color: #f5f5f5;
}
.bg{
  width: 100%;
  height: 600rpx;
  background-image: url('https://ss3.bdstatic.com/70cFv8Sh_Q1YnxGkpoWK1HF6hhy/it/u=2526897329,951224392&fm=26&gp=0.jpg');
  background-size: cover;
}
.imageContainer{
  width: 100%;
  height: 500rpx;
  /* background-color: rgb(240, 34, 34,0.5); */
  background-color: #f5f5f5;
 }
 .item{
  height: 500rpx;
 }
 .itemImg{
  position: absolute;
  width: 100%;
  height: 380rpx;
  border-radius: 15rpx;
  z-index: 5;
  opacity: 0.7;
  top: 13%;
 }
 .active{
  opacity: 1;
  z-index: 10;
  height: 430rpx;
  top: 7%;
  transition:all .2s ease-in 0s;
 }
.container{
  margin: 0 auto;
  padding: 0;
  margin-top: 4%;
}
.text{
  color: coral;
  font-size: medium;
  margin: auto;
  margin-bottom: 5%;
}
.div{
  width: 94%;
  height: 350rpx;
  margin-top: 5%;
  margin-bottom: 4%;
}
.shop-all{
  width: 100%;
  height: 303rpx;
  background-color:#fff;
}
.shop-all image{
  float: left;
  width: 50%;
  height: 303rpx;
}
.shop{
  font-size: medium;
  color: black;
  margin-left: 15%;
}
.shop-sale-condition text{
  font-weight: 500;
}
.shop-sale-condition .bord{
  color:#656460;
  font-size: x-small;
  border:0.05rem solid #b8b7b3;
  border-radius: 15%;
  margin-left: 30rpx;
}
.shop-sale-condition .bord:first-child{
  color: #f75047;
  border:0.05rem solid #f75047;
}
.title{
  font-size: 40rpx;
  color: black;
  margin-left: 5%;
  
}
.shop-sale-condition .price{
  font-size: 40rpx;
  margin-left: 15%;
  color: #f75047;
}
.shop-sale-condition button{
  color: #fff;
  border-radius: 25%;
  margin-left: 25%;
  background-color: rgb(24, 170, 255);
}