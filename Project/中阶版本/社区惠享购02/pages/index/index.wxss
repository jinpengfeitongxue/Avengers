page{
  background-color: #f5f5f5;
}
.bg{
  width: 100%;
  height: 600rpx;
  background-image: url('https://ss3.bdstatic.com/70cFv8Sh_Q1YnxGkpoWK1HF6hhy/it/u=2526897329,951224392&fm=26&gp=0.jpg');
  background-size: cover;
}
.ding{
  width: 70rpx;
  height: 50rpx;
  float: left;
  margin-left: 4%;
}
.imageContainer{
  width: 100%;
  height: 500rpx;
  background-color: #4C9673;
 }
 .adds{
   width: 120rpx;
   height: 50rpx;
   margin-left: 1%;
   overflow: hidden;
   text-overflow:ellipsis;
   white-space: nowrap;
 }
 .s{
   width: 100%;
   height: 50rpx;
   background-color: #4C9673;
 }
 .search{
  margin-left: 20%;
  width: 75%;
  height: 50rpx;
  border: none;
  border-radius: 5px;
  background-color:#f5f5f5;
  line-height: 50rpx;
  margin-top: -50rpx;
}
.search image{
  width: 20px;
  height: 20px;
  position: absolute;
  top: 5rpx;
  left: 50%;
}
.search text{
  margin-left: 48%;
  color:#000;
}
 .item{
  height: 500rpx;
 }
 .itemImg{
  position: absolute;
  width: 100%;
  height: 380rpx;
  border-radius: 15rpx;
  z-index: 5;
  opacity: 0.7;
  top: 13%;
 }
 .active{
  opacity: 1;
  z-index: 10;
  height: 430rpx;
  top: 7%;
  transition:all .2s ease-in 0s;
 }
.container{
  margin: 0 auto;
  padding: 0;
  margin-top: 6%;
}
.text{
  color: coral;
  font-size: larger;
  margin: auto;
  margin-bottom: 5%;
}
.div{
  width: 94%;
  height: 350rpx;
  margin-top: 3%;
  margin-bottom: 4%;
}
.shop-all{
  width: 100%;
  height: 303rpx;
  border-radius: 15rpx;
  background-color:#fff;
}
.shop-all image{
  float: left;
  width: 50%;
  height: 303rpx;
  border-radius: 15rpx;
}
.shop{
  font-size: medium;
  color: black;
  margin-left: 60%;
  padding-top: 5%;
  padding-bottom: 2%;
}
.distance{
  font-size: small;
  margin-left: 65%;
  padding-bottom: 1%;
}
.shop-sale-condition text{
  font-weight: 500;
}
.shop-sale-condition .bord{
  color:#656460;
  font-size: x-small;
  border:0.05rem solid #b8b7b3;
  border-radius: 15%;
  margin-left: 30rpx;
}
.shop-sale-condition .bord:first-child{
  color: #f75047;
  border:0.05rem solid #f75047;
}
.title{
  font-size: 40rpx;
  color: black;
  margin-left: 5%;
  
}
.shop-sale-condition .price{
  font-size: 40rpx;
  margin-left: 15%;
  color: #f75047;
}
.shop-sale-condition button{
  color: #fff;
  border-radius: 25%;
  margin-left: 25%;
  background-color:#4C9673;
}