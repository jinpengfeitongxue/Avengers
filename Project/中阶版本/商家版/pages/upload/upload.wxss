page {
  background-color: #f1f1f1;
}
.title {
  margin-top: 5rpx;
  background-color: white;
  width: 100%;
  height: 80rpx;
}
.title_text {
  margin-left: 20rpx;
  width: 100%;
  height: 50rpx;
  padding-top: 10rpx;
  display: flex;
}
.title_text text {
  font-size: 40rpx;
}
.title_text input {
  font-size: 30rpx;
  width: 60vw;
  margin-left: 20rpx;
}
.upImv {
  background-color: white;
  width: 100%;
  margin-top: 5rpx;
} 
.upImv_text {
  font-size: 40rpx;
  margin-left: 20rpx;
  padding-top: 20rpx;
}
/*选择图片View*/
.addImv {
  background-color: #f2f6f9;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  margin-top: 5rpx;
}

/*添加图片*/ 
.addImv .chooseView {
  width: 250rpx;
  height: 250rpx;
  margin: 20rpx 20rpx;
  background-color: #f2f6f9;
  border: 1px dashed lightgray;
  text-align: center;
  border-radius: 5px;
  margin-left: 40rpx;
} 
.addImv .chooseImv {
  width: 150rpx;
  height: 150rpx;
  margin-top: 50rpx;
}
/*已选择的图片*/ 
.addImv .upFile {
  width:250rpx;
  height: 250rpx;
  position: relative;
  margin-left: 40rpx;
  border: 1px solid #c0ccda;
} 
.addImv .upFile .itemImv {
  width: 250rpx;
  height: 250rpx;
} 
.addImv .upFile .closeView {
  position: absolute;
  top: 210rpx;
  width: 100%;
  height: 40rpx;
  background-color:rgba(0,0,0, 0.5);
} 
.addImv .upFile .closeImv{
  position: absolute;
  left:110rpx;
  width: 30rpx;
  height: 40rpx;

}
.sureRelease {
  background-color: #e44178;
  color: white;
  position: fixed;
  bottom: 0rpx;
} 



